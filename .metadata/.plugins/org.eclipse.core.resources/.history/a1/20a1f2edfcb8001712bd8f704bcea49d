package garage;

import java.io.EOFException;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.io.PrintWriter;
import java.io.UnsupportedEncodingException;
import java.util.ArrayList;

public class Garage {
	
	
	
	
	
	public Garage() {
		
		try {
			
	
		FileInputStream fi = new FileInputStream(new File("myObjects.txt"));
		ObjectInputStream oi = new ObjectInputStream(fi);

		// Read objects
		while (true) {
			try {
		Vehicule pr1 = (Vehicule) oi.readObject();
		//Vehicule pr2 = (Vehicule) oi.readObject();

		//
		System.out.println(pr1.toString()+"FIN");
		//System.out.println(pr2.toString()+"FIN");

		
		}
			catch (EOFException e) {System.out.println("FINNNN"); return;}
		}
		
		oi.close();
		fi.close();
		
		}
		
		
		
		catch (FileNotFoundException e) {
			System.out.println("File not found");
		} catch (IOException e) {
			System.out.println("Error initializing stream");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}

	private ArrayList<Vehicule> v= new ArrayList<Vehicule>();

	
	public void addVoiture(Vehicule voi) throws IOException {
		
		FileOutputStream f = new FileOutputStream(new File("myObjects.txt"));
		ObjectOutputStream o = new ObjectOutputStream(f);

		// Write objects to file
		o.writeObject(voi);
		System.out.println("UNE ECRITURE");
	
		
		
		v.add(voi); //On suppose qu'on peut mettre plusieurs fois le meme véhicule
	}
	
	public String toString() {

		String res="";
		
		for (Vehicule vehicule : v) {
			res+=vehicule.toString()+" \n";
		}
		
		return res;
	
	}
	
	

}
